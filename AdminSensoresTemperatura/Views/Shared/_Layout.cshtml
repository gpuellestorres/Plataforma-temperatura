    @if (Session["rol"] != null) { 
    <script type="text/javascript" charset="utf-8">
    avisarUnaVez = true;
    
    setInterval(function () {
        actualizarAlertas();
    }, 30000);

    function actualizarAlertas()
    {
        $.ajax({
            url: "/Alertas/ObtenerAlertas",
            data: {},

            success: function (retorno) {

                $("#alertas").html("");
                if (retorno != "||") {

                    datos = retorno.split("|");

                    var arreglo = datos[0].split(";");

                    if (avisarUnaVez && arreglo != "") {
                        $(".content-wrapper").prepend('<div class="alert alert-danger alert-dismissable" id="avisoAlerta"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>Aviso: Existen Alertas no Leídas en el Sistema</div>');

                        avisarUnaVez = false;

                        $('html,body').animate({
                            scrollTop: $("#avisoAlerta").offset().top
                        },
                        'slow');
                    }

                    for (i = 0; i < arreglo.length; i++) {
                        $("#alertas").append(arreglo[i]);
                    }

                    if (datos[0]!="") {
                        $("#iAlertas").addClass("text-danger");
                        $("#cantidadAlertas").html(arreglo.length);
                        $("#alertas").append('<li><a href="@Url.Action("todas","Alertas")"><i class="fa fa-tasks fa-fw"></i> Ver alertas no leidas del sistema</a></li>');
                    }
                    else {
                        $("#iAlertas").removeClass("text-danger");
                        $("#iAlertas").addClass("text-success");
                        $("#cantidadAlertas").html("0");
                    }

                    $("#alertas").append('<li><a href="@Url.Action("all","Alertas")"><i class="fa fa-tasks fa-fw"></i> Ver todas las alertas del sistema</a></li>');


                    sensoresProblemas = datos[1].split(";");
                    for (i = 0; i < sensoresProblemas.length; i++) {
                        $("#alertas").append(sensoresProblemas[i]);
                    }
                    molinosProblemas = datos[2].split(";");
                    for (i = 0; i < molinosProblemas.length; i++) {
                        $("#alertas").append(molinosProblemas[i]);
                    }
                }
                else {
                    $("#alertas").append('<li><a href="@Url.Action("all","Alertas")"><i class="fa fa-tasks fa-fw"></i> Ver todas las alertas del sistema</a></li>');
                }
            }
        });
    }

        actualizarAlertas();
</script>
