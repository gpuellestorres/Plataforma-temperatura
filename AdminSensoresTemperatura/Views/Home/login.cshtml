@{
    ViewBag.Title = "Login";
}

@section headRef{
    <link href="/admin/estilo.css" rel="stylesheet">
}

<div class="container">
    @if (ViewBag.mensaje != null && ViewBag.mensaje == "Contraseña cambiada")
    {
        <div class="col-md-12">
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert"
                        aria-hidden="true">
                    &times;
                </button>
                Su contraseña se ha modificado correctamente. Ingrese nuevamente al sistema
            </div>
        </div>
        <div class="clear-fix"></div>
    }
    @if (ViewBag.mensaje != null && ViewBag.mensaje == "login erroneo")
    {
        <div class="col-md-12">
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert"
                        aria-hidden="true">
                    &times;
                </button>
                Usuario y/o Contraseña erróneos
            </div>
        </div>
        <div class="clear-fix"></div>
    }
       <div class="row vertical-offset-100">
           <br /> 
           <br /> 
                    <div class="col-md-4 col-md-offset-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="row-fluid user-row">
                                    <img src="~/admin/imagenes/WRPREDICTIVO corel17.png" class="img-responsive" alt="Conxole Admin" />
                                </div>
                            </div>
                            <div class="panel-body">
                                <form method="post" action="@Url.Action("verificarLogin", "Home" )" accept-charset="UTF-8" role="form" class="form-signin">
                                    <fieldset>
                                        <label class="panel-login">
                                            <div class="login_result"></div>
                                        </label>
                                        <input class="form-control" placeholder="Nombre de usuario" name="nombre" type="text" autofocus required>
                                        <input class="form-control" placeholder="Password" name="password" type="password" value="" required>
                                        <br></br>
                                        <input class="btn btn-lg btn-primary btn-block" type="submit" id="login" value="Entrar »">
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
       </div>
